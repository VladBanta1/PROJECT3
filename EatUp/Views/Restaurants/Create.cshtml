@model EatUp.Models.ViewModels.RestaurantFormViewModel

@{
    ViewData["Title"] = "Create Restaurant";
}

<div class="form-card">

    <h3 class="mb-4 text-center">Create Restaurant</h3>

    <div asp-validation-summary="ModelOnly"
         class="alert alert-danger alert-elegant"></div>

    <form asp-action="Create"
          method="post"
          enctype="multipart/form-data">

        <div class="mb-3">
            <label class="form-label">Restaurant name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Restaurant image</label>
            <input asp-for="ImageFile"
                   type="file"
                   class="form-control"
                   accept="image/*" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Address (for display)</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
            <small class="text-muted">
                This address is shown to customers. Location is chosen on the map below.
            </small>
        </div>

        <!-- MAP LOCATION PICKER -->
        <div class="mb-4">
            <label class="form-label">Restaurant location</label>
            <div id="map" style="height: 350px; border-radius: 12px;"></div>
        </div>

        <input type="hidden" asp-for="Latitude" id="lat" />
        <input type="hidden" asp-for="Longitude" id="lng" />

        <div class="mb-3">
            <label class="form-label">Delivery time (minutes)</label>
            <input asp-for="DeliveryTimeMinutes" class="form-control" />
            <span asp-validation-for="DeliveryTimeMinutes" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Base delivery fee (lei)</label>
            <input asp-for="DeliveryFee" class="form-control" />
            <span asp-validation-for="DeliveryFee" class="text-danger"></span>
        </div>

        <div class="alert alert-info alert-elegant mb-4">
            Choose your restaurant location on the map.
            Customers’ delivery distance will be calculated from this point.
        </div>

        <button type="submit"
                class="btn btn-primary w-100">
            Save restaurant details
        </button>
        <input type="hidden" asp-for="Latitude" id="lat" />
        <input type="hidden" asp-for="Longitude" id="lng" />


    </form>
</div>

<!-- LEAFLET -->
<link rel="stylesheet"
      href="https://unpkg.com/leaflet/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet/dist/leaflet.js"></script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        var map = L.map('map').setView([44.4268, 26.1025], 13);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png')
            .addTo(map);

        var marker = L.marker(map.getCenter(), { draggable: true }).addTo(map);

        function updateHiddenInputs(latlng) {
            document.getElementById('lat').value = latlng.lat;
            document.getElementById('lng').value = latlng.lng;
        }

        // setam coordonatele initiale
        updateHiddenInputs(marker.getLatLng());

        marker.on('dragend', function () {
            updateHiddenInputs(marker.getLatLng());
        });

        map.on('click', function (e) {
            marker.setLatLng(e.latlng);
            updateHiddenInputs(e.latlng);
        });
    </script>

}
