@model EatUp.Models.ViewModels.RestaurantFormViewModel

@{
    ViewData["Title"] = "Create Restaurant";
}

<div class="form-card">

    <h3 class="mb-4 text-center">Create Restaurant</h3>

    <div asp-validation-summary="ModelOnly"
         class="alert alert-danger alert-elegant"></div>

    <form asp-action="Create"
          method="post"
          enctype="multipart/form-data">

        <div class="mb-3">
            <label class="form-label">Restaurant name</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Restaurant image</label>
            <input asp-for="ImageFile"
                   type="file"
                   class="form-control"
                   accept="image/*" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Address</label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Delivery time (minutes)</label>
            <input asp-for="DeliveryTimeMinutes" class="form-control" />
            <span asp-validation-for="DeliveryTimeMinutes" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Delivery fee (lei)</label>
            <input asp-for="DeliveryFee" class="form-control" />
            <span asp-validation-for="DeliveryFee" class="text-danger"></span>
        </div>

        <div class="alert alert-info alert-elegant mb-4">
            Complete your restaurant details. You will be able to add menu items
            and submit your restaurant for approval afterwards.
        </div>

        <button type="submit"
                class="btn btn-primary w-100">
            Save restaurant details
        </button>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
