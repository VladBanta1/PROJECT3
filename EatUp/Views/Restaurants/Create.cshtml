@model EatUp.Models.Restaurant

@if (TempData["Debug"] != null)
{
    <div class="alert alert-danger">
        @TempData["Debug"]
    </div>
}

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Restaurant</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="ImageUrl" class="control-label">Image URL</label>
                <input asp-for="ImageUrl" class="form-control" />
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
          
            <div class="form-group">
                <label asp-for="DeliveryTimeMinutes" class="control-label"></label>
                <input asp-for="DeliveryTimeMinutes" class="form-control" />
                <span asp-validation-for="DeliveryTimeMinutes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeliveryFee" class="control-label"></label>
                <input asp-for="DeliveryFee" class="form-control" />
                <span asp-validation-for="DeliveryFee" class="text-danger"></span>
            </div>
            <div class="alert alert-info mt-3 mb-3">
                Complete your restaurant details. You will be able to add menu items
                and submit your restaurant for approval afterwards.
            </div>

            <div class="form-group">
                <input type="submit"
                       value="Save restaurant details"
                       class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
