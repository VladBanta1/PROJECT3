@model EatUp.Models.Restaurant

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<h2>Manage Restaurant</h2>

<p><strong>Name:</strong> @Model.Name</p>

<p>
    <strong>Status:</strong>

    @if (!Model.IsSubmitted)
    {
        <span class="badge bg-secondary">Draft</span>
    }
    else if (Model.IsSubmitted && !Model.IsApproved)
    {
        <span class="badge bg-warning">Pending approval</span>
    }
    else
    {
        <span class="badge bg-success">Approved</span>
    }
</p>


<hr />

<div class="card mb-4">
    <div class="card-body">
        <h5 class="card-title">Restaurant Settings</h5>
        <p class="card-text">
            Update restaurant information such as name, address or image.
        </p>

        <a asp-controller="Restaurants"
           asp-action="Edit"
           asp-route-id="@Model.Id"
           class="btn btn-outline-primary">
            Edit Restaurant
        </a>
    </div>
</div>


<h4>Menu Items</h4>

<a asp-controller="MenuItems"
   asp-action="Create"
   class="btn btn-primary mb-3">
    Add Menu Item
</a>

@if (!Model.MenuItems.Any())
{
    <p>No menu items yet.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th style="width: 160px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.MenuItems)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price lei</td>
                    <td>
                        <a asp-controller="MenuItems"
                           asp-action="Edit"
                           asp-route-id="@item.Id"
                           class="btn btn-sm btn-warning">
                            Edit
                        </a>

                        <form asp-controller="MenuItems"
                              asp-action="Delete"
                              asp-route-id="@item.Id"
                              method="post"
                              class="d-inline"
                              onsubmit="return confirm('Are you sure you want to delete this item?');">
                            @Html.AntiForgeryToken()
                            <button type="submit"
                                    class="btn btn-sm btn-danger ms-1">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@if (!Model.IsApproved && Model.MenuItems.Any())
{
    <a asp-action="SubmitForApproval"
       class="btn btn-success mt-3">
        Submit for approval
    </a>
}
