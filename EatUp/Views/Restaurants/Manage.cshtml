@model EatUp.Models.Restaurant

@{
    ViewData["Title"] = "Manage Restaurant";
}

<h2 class="mb-4 text-center">Manage Restaurant</h2>

<!-- STATUS CARD -->
<div class="form-card">

    <h5 class="mb-3">Restaurant Overview</h5>

    <p><strong>Name:</strong> @Model.Name</p>

    <p>
        <strong>Status:</strong>
        @if (!Model.IsSubmitted)
        {
            <span class="badge bg-secondary">Draft</span>
        }
        else if (Model.IsSubmitted && !Model.IsApproved)
        {
            <span class="badge bg-warning text-dark">Pending approval</span>
        }
        else
        {
            <span class="badge bg-success">Approved</span>
        }
    </p>

    <a asp-controller="Restaurants"
       asp-action="Edit"
       asp-route-id="@Model.Id"
       class="btn btn-outline-primary mt-2">
        Edit Restaurant
    </a>
</div>

<!-- MENU ITEMS -->
<div class="form-card">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h5 class="mb-0">Menu Items</h5>

        <a asp-controller="MenuItems"
           asp-action="Create"
           class="btn btn-primary btn-sm">
            Add Menu Item
        </a>
    </div>

    @if (!Model.MenuItems.Any())
    {
        <p class="text-muted">No menu items yet.</p>
    }
    else
    {
        <table class="table align-middle">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th class="text-end" style="width:180px;">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.MenuItems)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Price.ToString("0.00") lei</td>
                        <td class="text-end">

                            <a asp-controller="MenuItems"
                               asp-action="Edit"
                               asp-route-id="@item.Id"
                               class="btn btn-sm btn-outline-warning">
                                Edit
                            </a>

                            <form asp-controller="MenuItems"
                                  asp-action="Delete"
                                  asp-route-id="@item.Id"
                                  method="post"
                                  class="d-inline"
                                  onsubmit="return confirm('Are you sure you want to delete this item?');">
                                @Html.AntiForgeryToken()
                                <button type="submit"
                                        class="btn btn-sm btn-outline-danger ms-1">
                                    Delete
                                </button>
                            </form>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    @if (!Model.IsApproved && Model.MenuItems.Any())
    {
        <div class="text-end mt-3">
            <a asp-action="SubmitForApproval"
               class="btn btn-success">
                Submit for approval
            </a>
        </div>
    }

</div>
