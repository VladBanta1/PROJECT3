@model EatUp.Models.ViewModels.RestaurantFormViewModel

@{
    ViewData["Title"] = "Edit Restaurant";
}

<div class="form-card">

    <h3 class="mb-4 text-center">Edit Restaurant</h3>

    <div asp-validation-summary="ModelOnly"
         class="alert alert-danger alert-elegant"></div>

    <form asp-action="Edit" enctype="multipart/form-data">

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ExistingImageUrl" />

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <!-- CURRENT IMAGE -->
        <div class="mb-3">
            <label class="form-label">Current Image</label><br />
            <img src="@Model.ExistingImageUrl"
                 alt="Restaurant image"
                 class="rounded shadow-sm"
                 style="max-width: 220px; height: auto;" />
        </div>

        <!-- NEW IMAGE UPLOAD -->
        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label">Change Image</label>
            <input asp-for="ImageFile"
                   type="file"
                   class="form-control"
                   accept="image/*" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="DeliveryTimeMinutes" class="form-label"></label>
            <input asp-for="DeliveryTimeMinutes" class="form-control" />
            <span asp-validation-for="DeliveryTimeMinutes" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="DeliveryFee" class="form-label"></label>
            <input asp-for="DeliveryFee" class="form-control" />
            <span asp-validation-for="DeliveryFee" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-controller="Restaurants"
               asp-action="Manage"
               class="btn btn-outline-secondary">
                Back to manage
            </a>

            <button type="submit" class="btn btn-primary">
                Save changes
            </button>
        </div>

    </form>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
