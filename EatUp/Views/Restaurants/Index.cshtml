@model IEnumerable<EatUp.Models.ViewModels.RestaurantDistanceViewModel>


@{
    ViewData["Title"] = "Restaurants";
}

<h1 class="mb-4 text-center">Restaurants</h1>

<div class="row g-4">

    @foreach (var item in Model)
    {
        var imageUrl = string.IsNullOrWhiteSpace(item.ImageUrl)
        ? "https://via.placeholder.com/400x250?text=Restaurant"
        : item.ImageUrl;

        <div class="col-md-4">
            <div class="restaurant-card h-100">

                <a asp-controller="Restaurants"
                   asp-action="Details"
                   asp-route-id="@item.Id"
                   class="restaurant-image-link">

                    <img src="@imageUrl"
                         alt="@item.Name" />

                </a>


                <div class="p-3 d-flex flex-column h-100">

                    <h5 class="mb-1">@item.Name</h5>

                    <p class="text-muted mb-0">
                        @item.DeliveryTimeMinutes min •
                        @item.DistanceKm km •
                        @item.DeliveryFee.ToString("0.00") lei delivery
                    </p>


                    

                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Delete"
                               asp-route-id="@item.Id"
                               class="btn btn-outline-danger btn-sm">
                                Delete
                            </a>
                        }
                    

                </div>
            </div>
        </div>
    }

</div>
