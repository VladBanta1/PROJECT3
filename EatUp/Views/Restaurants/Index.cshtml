@model IEnumerable<EatUp.Models.Restaurant>

@{
    ViewData["Title"] = "Restaurants";
}

<h1 class="mb-4">Restaurants</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Restaurant</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        var imageUrl = string.IsNullOrWhiteSpace(item.ImageUrl)
        ? "https://via.placeholder.com/400x250?text=Restaurant"
        : item.ImageUrl;

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="@imageUrl" class="card-img-top restaurant-card-img" alt="@item.Name" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@item.Name</h5>
                    <p class="card-text text-muted mb-1">@item.CuisineType</p>
                    <p class="card-text mb-2">
                        <small class="text-muted">
                            @item.DeliveryTimeMinutes min • @item.DeliveryFee.ToString("0.00") lei delivery
                        </small>
                    </p>
                    <p class="card-text flex-grow-1">
                        @item.Description
                    </p>
                    <div class="mt-2 d-flex justify-content-between">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-success">
                            View menu
                        </a>
                        <div>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
