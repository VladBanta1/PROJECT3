@model EatUp.Models.ViewModels.MenuItemFormViewModel

@{
    ViewData["Title"] = "Add Menu Item";
}

<div class="form-card">

    <h3 class="mb-4 text-center">Add Menu Item</h3>

    <div asp-validation-summary="ModelOnly"
         class="alert alert-danger alert-elegant"></div>

    <form asp-action="Create"
          method="post"
          enctype="multipart/form-data">

        <div class="mb-3">
            <label asp-for="RestaurantId" class="form-label">Restaurant</label>
            <select asp-for="RestaurantId"
                    class="form-select"
                    asp-items="ViewBag.RestaurantId">
                <option value="">-- Select restaurant --</option>
            </select>
            <span asp-validation-for="RestaurantId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label"></label>
            <input asp-for="Description" class="form-control" />
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <!--  UPLOAD POZA -->
        <div class="mb-3">
            <label asp-for="ImageFile" class="form-label">Image</label>
            <input asp-for="ImageFile"
                   type="file"
                   class="form-control" />
            <span asp-validation-for="ImageFile" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Price" class="form-label"></label>
            <input asp-for="Price" class="form-control" />
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="d-flex justify-content-between">
            <a asp-controller="Restaurants"
               asp-action="Manage"
               class="btn btn-outline-secondary">
                Back to manage
            </a>

            <button type="submit"
                    class="btn btn-primary">
                Save
            </button>
        </div>

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
