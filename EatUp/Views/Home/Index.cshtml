@{
    ViewData["Title"] = "EatUp - Local Food Delivery";
}

<div class="hero">

    <h1>EatUp</h1>

    <p>
        Order delicious food from local restaurants,<br />
        fast, simple and reliable.
    </p>

    <div class="hero-buttons">
        <a asp-controller="Restaurants"
           asp-action="Index"
           class="btn btn-success btn-lg px-4">
            Browse restaurants
        </a>

        <a asp-controller="Cart"
           asp-action="Index"
           class="btn btn-outline-secondary btn-lg px-4">
            View cart
        </a>
    </div>

</div>
