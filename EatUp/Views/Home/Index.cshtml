@{
    ViewData["Title"] = "EatUp - Local Food Delivery";
}

<div class="hero">
    <h1>EatUp</h1>
    <p>Order your favorite food from local restaurants, fast and easy.</p>

    <div class="hero-buttons">
        <a asp-controller="Restaurants"
           asp-action="Index"
           class="btn btn-success btn-lg">
            Browse restaurants
        </a>

        <a asp-controller="Cart"
           asp-action="Index"
           class="btn btn-outline-secondary btn-lg">
            View cart
        </a>
    </div>
</div>

