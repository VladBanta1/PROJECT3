@model List<EatUp.Models.CartItem>

@{
    ViewData["Title"] = "Your Cart";
}

<h2>Your Cart</h2>
<hr />

@if (!Model.Any())
{
    <p>Your cart is empty.</p>
    <a asp-controller="Restaurants" asp-action="Index" class="btn btn-primary">
        Browse restaurants
    </a>
    return;
}

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>Item</th>
            <th>Restaurant</th>
            <th class="text-end">Unit Price</th>
            <th class="text-center">Quantity</th>
            <th class="text-end">Total</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="@item.ImageUrl"
                         alt="@item.MenuItemName"
                         style="width:50px;height:50px;object-fit:cover;" />
                </td>
                <td>@item.MenuItemName</td>
                <td>@item.RestaurantName</td>
                <td class="text-end">@item.UnitPrice.ToString("0.00") lei</td>
                <td>
                    <div class="d-flex align-items-center gap-2">
                        <form asp-action="Decrease" method="post">
                            <input type="hidden" name="menuItemId" value="@item.MenuItemId" />
                            <button class="btn btn-sm btn-outline-secondary">−</button>
                        </form>

                        <span>@item.Quantity</span>

                        <form asp-action="Increase" method="post">
                            <input type="hidden" name="menuItemId" value="@item.MenuItemId" />
                            <button class="btn btn-sm btn-outline-secondary">+</button>
                        </form>
                    </div>
                </td>

                <td class="text-end">@item.TotalPrice.ToString("0.00") lei</td>
                <td class="text-end">
                    <a asp-action="Remove"
                       asp-route-menuItemId="@item.MenuItemId"
                       class="btn btn-sm btn-danger">
                        Remove
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var itemsTotal = Model.Sum(i => i.TotalPrice);
    var deliveryFee = Model.First().DeliveryFee;
    var grandTotal = itemsTotal + deliveryFee;
}

<div class="text-end">
    <p><strong>Items total:</strong> @itemsTotal.ToString("0.00") lei</p>
</div>

<hr />

<div class="d-flex gap-2 align-items-center">

    @if (User.Identity.IsAuthenticated)
    {
        <a asp-controller="Cart"
           asp-action="Checkout"
           class="btn btn-success">
            Checkout
        </a>

    }
    else
    {
        <a asp-controller="Account"
           asp-action="Login"
           class="btn btn-primary">
            Login to place order
        </a>
    }

    <a asp-controller="Restaurants"
       asp-action="Index"
       class="btn btn-secondary">
        Continue shopping
    </a>

</div>
