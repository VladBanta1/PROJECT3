<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EatUp</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/EatUp.styles.css" asp-append-version="true" />
</head>

<body class="d-flex flex-column min-vh-100">

    <!-- NAVBAR -->
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow mb-1">
            <div class="container-fluid">

                <a class="navbar-brand" asp-controller="Home" asp-action="Index">EatUp</a>

                <button class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarMain"
                aria-controls="navbarMain"
                aria-expanded="false"
                aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between" id="navbarMain">

                    <!-- LEFT -->
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Restaurants" asp-action="Index">Restaurants</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Cart" asp-action="Index">Cart</a>
                        </li>

                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger"
                                asp-controller="Restaurants"
                                asp-action="Pending">
                                    Pending Restaurants
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger"
                                asp-controller="AdminMenuItems"
                                asp-action="Pending">
                                    Pending Menu Items
                                </a>
                            </li>
                        }

                    </ul>

                    <!-- RIGHT -->
                    <ul class="navbar-nav ms-auto">
                        @if (User.Identity.IsAuthenticated)
                        {
                            if (User.IsInRole("Restaurant"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark"
                                       asp-controller="Restaurants"
                                       asp-action="Manage">
                                        Manage
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <span class="nav-link text-dark">@User.Identity.Name</span>
                                </li>
                                <li class="nav-item">
                                    <form asp-controller="Account"
                                          asp-action="Logout"
                                          method="post">
                                        <button class="btn btn-link nav-link text-dark">Logout</button>
                                    </form>
                                </li>
                            }
                            else if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-dark">@User.Identity.Name</span>
                                </li>
                                <li class="nav-item">
                                    <form asp-controller="Account"
                                          asp-action="Logout"
                                          method="post">
                                        <button class="btn btn-link nav-link text-dark">Logout</button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <span class="nav-link text-dark">@User.Identity.Name</span>
                                </li>

                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle"
                                       href="#"
                                       role="button"
                                       data-bs-toggle="dropdown">
                                        Cont
                                    </a>
                                    <ul class="dropdown-menu dropdown-menu-end">
                                        <li>
                                            <a class="dropdown-item"
                                               asp-controller="Profile"
                                               asp-action="Index">
                                                Profile
                                            </a>
                                        </li>
                                        <li>
                                            <form asp-controller="Account"
                                                  asp-action="Logout"
                                                  method="post">
                                                <button class="dropdown-item text-danger">Logout</button>
                                            </form>
                                        </li>
                                    </ul>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Account"
                                   asp-action="Login">
                                    Login
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark"
                                   asp-controller="Account"
                                   asp-action="Register">
                                    Register
                                </a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <!-- MAIN CONTENT -->
    <main class="flex-fill">
        <div class="container pb-3">

            <!-- ALERTS -->
            @foreach (var key in new[] { "Success", "Error", "Warning", "Info" })
            {
                if (TempData[key] != null)
                {
                    <div class="alert alert-elegant alert-dismissible fade show
                                @(key == "Success" ? "alert-success" :
                                  key == "Error" ? "alert-danger" :
                                  key == "Warning" ? "alert-warning" :
                                  "alert-info")"
                         role="alert">
                        @TempData[key]
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                }
            }

            @RenderBody()
        </div>
    </main>

    <!-- FOOTER -->
    <footer class="border-top text-muted">
        <div class="container text-center py-3">
            &copy; 2025 - EatUp
        </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    <script>
        setTimeout(() => {
            document.querySelectorAll('.alert').forEach(a => {
                bootstrap.Alert.getOrCreateInstance(a).close();
            });
        }, 4000);
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
