@model EatUp.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="auth-wrapper">
    <div class="auth-card">

        <h2 class="text-center mb-4">Register</h2>

        <div asp-validation-summary="ModelOnly"
             class="alert alert-danger alert-elegant"></div>

        <form method="post">

            <div class="mb-3">
                <label class="form-label">Account type</label>
                <select asp-for="AccountType"
                        class="form-select"
                        id="accountType">
                    <option value="Client">Client</option>
                    <option value="Restaurant">Restaurant</option>
                </select>
            </div>

            <div class="mb-3">
                <input asp-for="Email"
                       class="form-control"
                       placeholder="Email" />
            </div>

            <div class="mb-3">
                <input asp-for="Password"
                       type="password"
                       class="form-control"
                       placeholder="Password" />
            </div>

            <div class="mb-3">
                <input asp-for="FullName"
                       class="form-control"
                       placeholder="Full name" />
            </div>

            <div class="mb-3">
                <input asp-for="PhoneNumber"
                       class="form-control"
                       placeholder="Phone number" />
            </div>

            <!-- CLIENT -->
            <div id="clientFields">
                <div class="mb-3">
                    <input asp-for="Address"
                           class="form-control"
                           placeholder="Delivery address" />
                </div>
            </div>

            <!-- RESTAURANT -->
            <div id="restaurantFields" style="display:none;">
                <hr />
                <div class="mb-3">
                    <input asp-for="RestaurantName"
                           class="form-control"
                           placeholder="Restaurant name" />
                </div>
                <div class="mb-3">
                    <input asp-for="RestaurantAddress"
                           class="form-control"
                           placeholder="Restaurant address" />
                </div>
            </div>

            <button type="submit" class="btn btn-primary w-100">
                Register
            </button>
        </form>

        <div class="text-center mt-3">
            <span class="text-muted">Already have an account?</span>
            <a asp-controller="Account"
               asp-action="Login">
                Login
            </a>
        </div>

    </div>
</div>

@section Scripts {
    <script>
        const select = document.getElementById("accountType");
        const restaurantFields = document.getElementById("restaurantFields");
        const clientFields = document.getElementById("clientFields");

        function toggleFields() {
            const isRestaurant = select.value === "Restaurant";
            restaurantFields.style.display = isRestaurant ? "block" : "none";
            clientFields.style.display = isRestaurant ? "none" : "block";
        }

        select.addEventListener("change", toggleFields);
        toggleFields();
    </script>
}
